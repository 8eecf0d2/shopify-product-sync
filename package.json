{
  "name": "shopify-typescript-base",
  "version": "0.0.0",
  "description": "Simple Shopify App foundation written in Typescript",
  "main": "dist/server.js",
  "author": "8eecf0d2",
  "license": "ISC",
  "scripts": {
    "lint": "tslint --project .",
    "certificates": "mkdir -p certificates && openssl req -x509 -sha256 -nodes -newkey rsa:2048 -days 365 -keyout certificates/localhost.key -out certificates/localhost.crt -subj '/CN=localhost' &> /dev/null",
    "build": "webpack --config ./webpack.config.js",
    "build:dev": "NODE_ENV=development yarn run build",
    "build:prod": "NODE_ENV=production yarn run build",
    "build:client": "webpack --config ./src/client/webpack.config.js --info-verbosity=verbose",
    "build:server": "webpack --config ./src/server/webpack.config.js --info-verbosity=verbose",
    "build:database": "webpack --config ./src/database/webpack.config.js --info-verbosity=verbose",
    "watch": "webpack --watch --config ./webpack.config.js",
    "watch:dev": "NODE_ENV=development yarn run watch",
    "watch:prod": "NODE_ENV=production yarn run watch",
    "watch:client": "webpack --config ./src/client/webpack.config.js --watch --info-verbosity=verbose",
    "watch:server": "webpack --config ./src/server/webpack.config.js --watch --info-verbosity=verbose",
    "watch:database": "webpack --config ./src/database/webpack.config.js --watch --info-verbosity=verbose",
    "start": "NODE_ENV=development node dist/server.js",
    "start:dev": "NODE_ENV=development yarn run start",
    "start:prod": "NODE_ENV=production yarn run start",
    "monitor:server": "nodemon dist/server.js --watch dist/server.js",
    "monitor:database": "nodemon dist/database.js --watch dist/database.js",
    "monitor:server:dev": "NODE_ENV=development yarn run monitor:server",
    "monitor:server:prod": "NODE_ENV=production yarn run monitor:server",
    "monitor:database:dev": "NODE_ENV=development yarn run monitor:database",
    "monitor:database:prod": "NODE_ENV=production yarn run monitor:database"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cookie": "^0.3.1",
    "@types/express": "^4.16.0",
    "@types/lowdb": "^1.0.5",
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.7",
    "@types/react-router-dom": "^4.3.0",
    "@types/uuid": "^3.4.4",
    "@types/webpack": "^4.4.11",
    "ts-loader": "^5.0.0",
    "typescript": "^3.0.3",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "@shopify/polaris": "^2.8.0",
    "body-parser": "^1.18.3",
    "cookie": "^0.3.1",
    "express": "^4.16.3",
    "liquidjs": "^6.0.0",
    "lowdb": "^1.0.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "uuid": "^3.3.2"
  }
}
